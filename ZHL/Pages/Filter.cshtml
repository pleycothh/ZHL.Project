@page
@model ZHL.GUI.Pages.FilterModel

@{
    ViewData["Title"] = "Home page";
    ViewData["Filter"] = true;

    DateTime timeUpdate = DateTime.Now;
}

@section scripts
{
    <link rel="stylesheet" type="text/css" href="~/css/Filter.css" />
}

<nav class="navbar mb-3 bg-secondary ">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="./Index" asp-route-CacheId="@Model.CacheId">Check</a>
        </li>

        <li class="nav-item">
            <a class="nav-link active" asp-area="" asp-page="./Filter" asp-route-CacheId="@Model.CacheId"><strong>Filter</strong></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="./About" asp-route-CacheId="@Model.CacheId">About</a>
        </li>
    </ul>
</nav>



<div class="container" style="margin-top:100px">
    
    <!------------------------ input bar ------------------------>
    <form method="post" class="mx-auto">
        <div class="input-group bg-transparent border-0">
            <input id="filter-input" type="text" asp-for="FilterInput" class="form-control border-2" placeholder="Enter a new filter..." />
            <button asp-page-handler="AddFilter" type="submit" class="btn btn-secondary text-white" asp-route-CacheId="@Model.CacheId" >Add</button>
        </div>
    </form>
        
    <!------------------------------------------------------ Filter Area ------------------------------------------------------->
    <div>
        <partial name="/Pages/Shared/_PartialListView.cshtml" model="@Model" view-data="ViewData" />
    </div>
</div>
