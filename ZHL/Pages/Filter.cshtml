@page
@model ZHL.GUI.Pages.FilterModel

@{
    ViewData["Title"] = "Home page";
    DateTime timeUpdate = DateTime.Now;
}

@section scripts
{
    <script src="~/js/scrollButton.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <style>
        body {
          background-color:#17191f;
          color: #17191f;
          font-size: 24px;
        }
        #filter {
          background-color: auto;
          width: auto;
          height: 40vh;
          overflow: auto;
        }
        #filter-list {
          
        }
        #filter-input {
            width: auto;
        }
    </style>

}

<nav class="navbar mb-3 bg-secondary ">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="./Index" asp-route-CacheId="@Model.CacheId">Check</a>
        </li>

        <li class="nav-item">
            <a class="nav-link active" asp-area="" asp-page="./Filter" asp-route-CacheId="@Model.CacheId"><strong>Filter</strong></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="./About" asp-route-CacheId="@Model.CacheId">About</a>
        </li>
    </ul>
</nav>



<div class="container">

<div class="card mx-auto" style="max-width:800px">
 
    <!------------------------------------------------------ Filter Area ------------------------------------------------------->


        <div id="filter" class="row card-body">
            <div id="filter-list" >
                @foreach (var filterItem in Model.filterList)
                {
                    <div class="card card-text p-2 m-3"  style="font-size:20px; margin: 10px; min-width: 400px; text-align: center;">@filterItem</div>
                }
            </div>
        </div>

        <div  class="row">
            <!------------------------ input bar ------------------------>
            <form method="post">
                <div class="input-group card-footer bg-orange-600  m-3 p-2">
                    <input id="filter-input" type="text" asp-for="FilterInput" class="form-control border-0" placeholder="Enter new filter..."  />
                    <button asp-page-handler="AddFilter" type="submit" class="btn btn-secondary text-white" asp-route-CacheId="@Model.CacheId" >Add</button>
                </div>
            </form>
        </div>
           
    </div>
</div>
