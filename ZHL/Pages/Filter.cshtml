@page
@model ZHL.GUI.Pages.FilterModel

@{
    ViewData["Title"] = "Home page";
    DateTime timeUpdate = DateTime.Now;
}

@section scripts
{
    <script src="~/js/scrollButton.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <style>
        body {
          background-color:#17191f;
          color: #17191f;
          font-size: 24px;
        }
        #filter {
          background-color: auto;
          width: auto;
          height: 40vh;
          overflow: auto;
        }
        #filter-list {
          
        }
        #filter-input {
            width: auto;
        }
    </style>

}

<nav class="navbar mb-3 bg-secondary ">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="./Index" asp-route-CacheId="@Model.CacheId">Check</a>
        </li>

        <li class="nav-item">
            <a class="nav-link active" asp-area="" asp-page="./Filter" asp-route-CacheId="@Model.CacheId"><strong>Filter</strong></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="./About" asp-route-CacheId="@Model.CacheId">About</a>
        </li>
    </ul>
</nav>



<div class="container" style="margin-top:100px">
    
    <h1 style="color:white">Filter List:</h1>

        <div class="mx-auto" style="max-width:1200px; background:white;">
 
        <!------------------------------------------------------ Filter Area ------------------------------------------------------->


            <div id="filter" style="height: 40vh; overflow:auto;">
                <div id="filter-list" >
                    @foreach (var filterItem in Model.filterList)
                    {
                    <div class="shadow p-3 mb-3 bg-white rounded" style="margin: 10px;font-size:20px; text-align: center;">@filterItem</div>
                    }
                </div>
            </div>

                <!------------------------ input bar ------------------------>
                <form method="post" class="mx-auto">
            <div class="input-group bg-transparent border-0">
                <input id="filter-input" type="text" asp-for="FilterInput" class="form-control border-2" placeholder="Enter new filter..." />
                        <button asp-page-handler="AddFilter" type="submit" class="btn btn-secondary text-white" asp-route-CacheId="@Model.CacheId" >Add</button>
                    </div>
                </form>
           
        </div>
</div>
