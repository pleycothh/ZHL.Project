@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    DateTime timeUpdate = DateTime.Now;
}

@section scripts
{
    <script src="~/js/scrollButton.js"></script>
    <style>
        body {
          background-color:#E7E9EB;
        }
        #filter {
          background-color: lightblue;
          width: 300px;
          height: 300px;
        }
        #filter-list {

          overflow: auto;
        }
    </style>

}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-pills bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link active" asp-area="" asp-page="./Index"><strong>Home</strong></a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="./About">About</a>
            </li>

        </ul>
    </div>
</nav>  
 


<div class="container mt-4">
    <div id="filter">
        <div id="filter-list">
        @foreach (var filterItem in Model.filterList)
        {
            <div class="card card-text d-inline-block p-2 px-3 m-1" style="font-size:20px; margin: 10px">@filterItem</div>
        }
        </div>
        <form method="post">

            <input type="text" asp-for="FilterInput" placeholder="Enter new filter..."  />
            <button asp-page-handler="AddFilter" type="submit" class="btn btn-primary" asp-route-CacheName="@Model.CacheId" >Add</button>
        </form>
    </div>
        


    <div class="card mx-auto" style="max-width:800px">

        <!-- Text Area -->
        <div class="card-body p-4" id="main-chat-area" style="height: 70vh; overflow:auto;">
            <div class="d-flex align-items-baseline mb-4">
                <div id="chat-list" style="list-style: none;">
                    @foreach (var item in Model.itemList)
                    {
                        <div class="pe-2" style="margin: 10px">
                            <div class="card card-text d-inline-block p-2 px-3 m-1" style="font-size:20px">@item.TextItem.InputString</div>
                            <div class="small">@item.Created</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <form method="post" style="margin-top: 100px">
            <!-- input bar -->
            <div class="card-footer bg-white position-absolute w-100 bottom-0 m-0 p-1">
                <div class="input-group">

                    <input type="text" asp-for="UserInput" class="form-control border-0" placeholder="Input..." />

                    <div class="input-group-text bg-transparent border-0">
                        <button class="btn btn-secondary text-white" type="submit" style="font-size:24px" asp-page-handler="SetItem" asp-route-CacheName="@Model.CacheId">Send</button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>