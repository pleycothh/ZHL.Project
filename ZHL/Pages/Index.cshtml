@page 
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    DateTime timeUpdate = DateTime.Now;
}

@section scripts
{
    <script src="~/js/scrollButton.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <style>
        body {
          background-color:#17191f;
          color: #17191f;
          font-size: 24px;
        }
        #filter {
          background-color: auto;
          width: auto;
          height: 40vh;
          overflow: auto;
        }
        #filter-list {
          
        }
        #filter-input {
            width: auto;
        }
    </style>

}

<nav class="navbar mb-3 bg-secondary " >
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" asp-area="" asp-page="./Index" asp-route-CacheId="@Model.CacheId"><strong>Check</strong></a>
        </li>

        <li class="nav-item" >
            <a class="nav-link text-dark" asp-area="" asp-page="./Filter" asp-route-CacheId="@Model.CacheId" >Filter</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="./About" asp-route-CacheId="@Model.CacheId">About</a>
        </li>
    </ul>
</nav>  
 


<div class="container" style="margin-top:100px">

    <h1 style="color:white">Filtered Item List:</h1>
    <!------------------------------------------------------ Text Area ------------------------------------------------------->
    <div class="mx-auto" style="max-width:1200px; background:white;">


            <div  id="main-chat-area" style="height: 40vh; overflow:auto;">
                <div id="chat-list">
                    @foreach (var item in Model.itemList)
                    {
                        <div class="shadow p-3 mb-3 bg-white rounded" style="margin: 10px;">
                            <div  style="font-size:20px; text-align: center;">@item.TextItem.InputString</div>
                            <div class="small" style="text-align:right">@item.Created</div>
                        </div>
                    }
                </div>

        </div>

        <!------------------------ input bar ------------------------>
        <form method="post" class="mx-auto" >
                
      
                <div class="input-group bg-transparent border-0">
                    <input type="text" asp-for="UserInput" class="form-control border-2" placeholder="Input..." />

                    <button class="btn btn-secondary text-white" type="submit" style="font-size:24px" asp-page-handler="SetItem" asp-route-CacheId="@Model.CacheId">Check</button>

            </div>
        </form>
    </div>

    <!------------------------ slide bar ------------------------>
    <div style="margin-top: 5%">
        <label for="customRange1" class="form-label" style="color:white">Filter Level: </label>
        <input type="range" class="form-range" id="customRange1">
    </div>

</div>
