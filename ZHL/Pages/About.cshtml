@page
@model ZHL.GUI.Pages.AboutModel
@{
    ViewData["Title"] = "Home page";
}
@section scripts
{
    <style>
        body {
          background-color:#17191f;
          font-family: Arial, Helvetica, sans-serif;
          color: #dbdbdb;
          font-size: 24px;
        }
        .nav-item{
            color: #dbdbdb;
        }
   

        * {
            box-sizing: border-box;
        }

        input[type=text], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }

        input[type=submit] {
            background-color: #04AA6D;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: #45a049;
            }

        .emailer {
            border-radius: 5px;
            background-color: #6c757e;
            padding: 20px;
        }
    </style>

}
<nav class="navbar mb-3 bg-secondary ">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="./Index" asp-route-CacheId="@Model.CacheId">Home</a>
        </li>
            
        <li class="nav-item">
            <a class="nav-link text-dark" style="color:white" asp-area="" asp-page="./Filter" asp-route-CacheId="@Model.CacheId">Filter</a>
